<Page x:Class="AutomateClickerBrielina.Controls.AdicionarCliqueOpcoes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomateClickerBrielina.Controls"
        mc:Ignorable="d"
        Title="AdicionarCliqueOpcoes" Height="222" Width="302">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" Content="Escolha o tipo de Clique:"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" x:Name="AdicionarCliqueBtnsPanel">
                <Button Content="Posicional" Click="PosicionalClick" Width="100" Margin="0,5,5,0"/>
                <Button Content="Por Imagem" Click="PorImagemClick" Width="100" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
