<Page x:Class="AutomateClickerBrielina.Controls.SalvarPrint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomateClickerBrielina.Controls"
        mc:Ignorable="d"
        Title="SalvarPrint" Height="222" Width="302">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
            <StackPanel>
                <TextBlock Text="Salvar Print Como:"/>
                <TextBox x:Name="inputName" Width="280"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Button Content="Tirar Print Novamente"  Width="135" Height="20" Click="NovoPrint" Margin="0,0,5,0"/>
                <Button Content="Carregar Print Existente"  Width="135" Height="20" Click="Carregar" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <Image x:Name="imagePanel" Source="../Prints/lastPrint.png" Grid.Row="3" MaxHeight="300" MaxWidth="750" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <StackPanel  Grid.Row="4" HorizontalAlignment="Right" Margin="0,0,15,0" Orientation="Horizontal">
            <Button Content="Cancelar"  Width="85" Height="20" Click="FecharJanela" Margin="0,0,5,0"/>
            <Button Content="Adicionar" Width="85" Height="20" Name="btnConcluir"/>
        </StackPanel>
    </Grid>
</Page>
