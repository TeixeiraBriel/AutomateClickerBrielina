<Window x:Class="AutomateClickerBrielina.Controls.GerenciaFluxo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomateClickerBrielina.Controls"
        mc:Ignorable="d"
        Title="GerenciaFluxo" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Height="30" Width="770" Margin="5" Background="LightGray" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Descrição:" Margin="15,5,5,5"/>
                <TextBox x:Name="inputDesc" Width="300" Margin="5"/>
                <Button Content="Adicionar Clique" Margin="5" Click="AdicionarCliqueClick"/>
            </StackPanel>
            <StackPanel x:Name="PainelFluxo"/>
        </StackPanel>
    </Grid>
</Window>
