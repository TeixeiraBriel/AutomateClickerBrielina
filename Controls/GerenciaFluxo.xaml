<Window x:Class="AutomateClickerBrielina.Controls.GerenciaFluxo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomateClickerBrielina.Controls"
        mc:Ignorable="d"
        Title="GerenciaFluxo" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Height="30" Width="770" Margin="5" Background="LightGray" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Ao escolher tipo de clique em sequencia ja seleciona a area desejada." Margin="15,5,5,5"/>
                <!--<Button Content="Adicionar Clique" Margin="5" Click="AdicionarCliqueClick"/>-->
                <Button Content="Adicionar Posicional" Width="110" Margin="5" Click="AdicionarCliquePosicionalClick"/>
                <Button Content="Adicionar Imagem" Width="110" Margin="5" Click="AdicionarCliqueImagemClick"/>
                <Button Content="Adicionar Pixel" Width="110" Margin="5" Click="AdicionarCliquePixelClick"/>
            </StackPanel>
            <ScrollViewer Width="auto" Height="auto">
                <StackPanel x:Name="PainelFluxo"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
